<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.sjxy.graduate.dao.HotelDao">

    <resultMap type="cn.sjxy.graduate.entity.Hotel" id="HotelMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="icon" column="icon" jdbcType="VARCHAR"/>
        <result property="img" column="img" jdbcType="VARCHAR"/>
        <result property="desc" column="desc" jdbcType="VARCHAR"/>
        <result property="price" column="price" jdbcType="NUMERIC"/>
        <result property="evaluate" column="evaluate" jdbcType="VARCHAR"/>
        <result property="hot" column="hot" jdbcType="VARCHAR"/>
        <result property="area" column="area" jdbcType="VARCHAR"/>
    </resultMap>
    <select id="queryById" resultMap="HotelMap">
        select * from hotel where id=#{id}
    </select>
</mapper>